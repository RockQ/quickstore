---
const brands = [
  {
    name: "Patagonia",
    description: "High-quality outdoor clothing and gear with a focus on sustainability and environmental responsibility.",
    image: "/images/patagonia-logo.png",
    link: "/products?brand=patagonia"
  },
  {
    name: "The North Face",
    description: "Innovative outdoor apparel, equipment, and footwear for extreme weather conditions and everyday use.",
    image: "/images/north-face-logo.png",
    link: "/products?brand=the-north-face"
  },
  {
    name: "Columbia",
    description: "Affordable and durable outdoor gear and sportswear for all types of outdoor activities.",
    image: "/images/columbia-logo.png",
    link: "/products?brand=columbia"
  },
  // Add more brands as needed
];
---

<section class="py-16 bg-charcoal-600">
    <div class="container mx-auto px-4">
      <h2 class="text-4xl font-bold text-white mb-8 text-center">Our Brands</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {brands.map((brand) => (
          <div class="bg-charcoal-600 p-6 rounded-lg shadow-md">
            <img src={brand.image} alt={`${brand.name} logo`} class="w-32 h-32 object-contain mb-4" />
            <h3 class="text-2xl font-semibold text-negroni-500 mb-4">{brand.name}</h3>
            <p class="text-white mb-4">{brand.description}</p>
            <a href={brand.link} class="inline-block bg-negroni-500 text-charcoal-700 px-4 py-2 rounded hover:bg-negroni-600 transition-colors">
              View Products
            </a>
          </div>
        ))}
      </div>
    </div>
  </section>